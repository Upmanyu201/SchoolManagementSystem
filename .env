# Other settings
SECRET_KEY=django-insecure-fixed-key-for-development-only-change-in-production-12345
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Backup File Settings
BACKUP_MAX_FILE_SIZE=52428800  # 50MB in bytes
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=backups
BACKUP_TEMP_DIRECTORY=backups/temp

# Backup Features
BACKUP_COMPRESSION_ENABLED=True
BACKUP_ENCRYPTION_ENABLED=False
BACKUP_ENCRYPTION_KEY=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"
BACKUP_ASYNC_ENABLED=True
BACKUP_MAX_CONCURRENT_OPERATIONS=3
BACKUP_CHUNK_SIZE=1000

# Backup Cleanup
BACKUP_CLEANUP_ENABLED=True
BACKUP_MAX_BACKUPS_PER_TYPE=50

# Monitoring and Alerting
BACKUP_HEALTH_CHECK_INTERVAL=3600  # 1 hour in seconds
BACKUP_ALERT_EMAIL_ENABLED=True
BACKUP_METRICS_RETENTION_HOURS=168  # 1 week

# Security Settings
BACKUP_REQUIRE_HTTPS=True
BACKUP_SESSION_TIMEOUT=3600  # 1 hour
BACKUP_MAX_LOGIN_ATTEMPTS=5
BACKUP_LOCKOUT_DURATION=900  # 15 minutes
